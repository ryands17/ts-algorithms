{
  "name": "ts-algorithms",
  "version": "1.0.2",
  "description": "A list of data structures and algorithms in TypeScript",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "start": "tsnd --respawn --transpileOnly --no-notify ./src",
    "lint": "eslint 'src/**/*.ts'",
    "test": "jest",
    "test:w": "jest --watch"
  },
  "keywords": [
    "algorithms",
    "typescript",
    "data structures"
  ],
  "author": "Ryan Dsouza",
  "license": "ISC",
  "dependencies": {
    "typescript": "^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "26.0.20",
    "@types/node": "14.14.31",
    "@types/prettier": "2.2.1",
    "@types/rimraf": "3.0.0",
    "@typescript-eslint/eslint-plugin": "4.15.2",
    "@typescript-eslint/parser": "4.15.2",
    "eslint": "7.20.0",
    "eslint-config-prettier": "8.1.0",
    "husky": "5.1.1",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "ts-jest": "26.5.2",
    "ts-node-dev": "1.1.6",
    "typesync": "0.8.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "npm run lint",
      "prettier --write"
    ]
  }
}
